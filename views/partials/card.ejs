<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dynamic Card</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@300;400;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Roboto Condensed", sans-serif;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      .card {
        border: 1px solid #000000;
        padding: 16px;
        border-radius: 8px;
        max-width: 400px;
        margin: 8px auto; /* Reduced margin between cards */
        background-color: #ffffff;
        opacity: 1;
        position: relative;
        overflow: hidden; /* Prevent excessive expansion */
      }
      .card img {
        max-width: 100%;
        border-radius: 8px;
        margin-bottom: 8px;
        cursor: pointer;
        width: auto; /* Maintain aspect ratio */
        height: auto; /* Maintain aspect ratio */
      }
      .scrollable-images {
        display: flex;
        overflow-x: auto;
        gap: 8px;
        padding: 8px 0;
        max-height: 150px; /* Adjust as needed */
        overflow-y: hidden;
        -webkit-overflow-scrolling: touch; /* Smooth scrolling on iOS */
      }
      .scrollable-images img {
        max-width: 100px; /* Adjust maximum size */
        height: auto; /* Maintain aspect ratio */
        border-radius: 8px;
      }
      .static-image {
        text-align: center;
        margin-bottom: 8px;
      }
      .top-right-image {
        position: absolute;
        top: 32px; /* Adjusted from 16px */
        right: 16px;
        max-width: 120px; /* Initial size */
        max-height: 120px; /* Initial size */
        border-radius: 8px;
        cursor: pointer; /* Make the image expandable */
      }
      .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.8);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000;
        display: none;
      }
      .overlay img {
        max-width: 90%;
        max-height: 90%;
        cursor: pointer; /* Make the image expandable */
      }
      .close-btn {
        position: absolute;
        top: 20px;
        right: 20px;
        font-size: 50px;
        color: white;
        cursor: pointer;
      }
      .btn {
        display: inline-flex;
        align-items: center;
        padding: 8px 12px;
        margin: 8px 4px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        color: white;
        font-size: 16px;
        text-decoration: none;
        height: auto; /* Adjust height for smaller screens */
        width: auto; /* Allow width to adjust */
        max-width: 100%; /* Ensure buttons fit within card */
      }
      .btn-whatsapp {
        background-color: #25d366;
      }
      .btn-whatsapp img {
        margin-right: 8px;
        width: 30px;
        height: 30px;
      }
      .btn-maps {
        background-color: #4285f4;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .btn-maps img {
        width: 35px; /* Adjusted image size */
        height: 35px; /* Adjusted image size */
      }
      .price {
        font-size: 22px; /* Increased font size */
        font-weight: bold;
        color: #333;
        margin: 16px 0; /* Space above and below price */
        display: block; /* Ensure price is on its own line */
      }
      .button-container {
        display: flex;
        gap: 8px;
        margin-top: 16px;
        margin-bottom: 8px; /* Reduced bottom margin */
      }
      .price-container {
        margin-top: 16px; /* Space above price */
      }

      /* Responsive adjustments */
      @media (max-width: 600px) {
        .scrollable-images img {
          max-width: 80px; /* Adjust image size for small screens */
        }
        .top-right-image {
          max-width: 80px; /* Adjust logo size for small screens */
        }
        .btn-whatsapp img,
        .btn-maps img {
          width: 25px; /* Adjust button icon size for small screens */
          height: 25px; /* Adjust button icon size for small screens */
        }
        .price {
          font-size: 18px; /* Adjust font size for small screens */
        }
      }
    </style>
  </head>
  <body>
    <div class="card">
      <% if (data) { %>
      <h2><%= data.name %></h2>
      <% if (data.mess_photo) { %>
      <img
        src="<%= data.mess_photo %>"
        alt="Top Right Image"
        class="top-right-image"
        onclick="expandImage(this.src)"
      />
      <div class="spacer" style="height: 120px;"></div>
      <% } else { %>
      <div class="spacer" style="height: 0;"></div>
      <% } %>
      <div class="button-container">
        <a
          href="https://wa.me/<%= data.contact %>"
          class="btn btn-whatsapp"
          target="_blank"
        >
          <img
            src="https://upload.wikimedia.org/wikipedia/commons/6/6b/WhatsApp.svg"
            alt="WhatsApp Logo"
            width="30"
            height="30"
          />
          WhatsApp
        </a>
        <a
          href="https://www.google.com/maps/search/?api=1&query=<%= encodeURIComponent(data.location) %>"
          class="btn btn-maps"
          target="_blank"
        >
          <img
            src="https://www.logo.wine/a/logo/Google_Maps/Google_Maps-Icon-Logo.wine.svg"
            alt="Google Maps Logo"
            width="35"
            height="35"
          />
          Location
        </a>
      </div>
      <div class="price-container">
        <span class="price">Rs. <%= data.price %></span>
      </div>
      <% if (data.menu_photo && data.menu_photo.length > 0) { %>
      <div class="static-image">
        <img
          src="<%= data.menu_photo[0] %>"
          alt="Static Image"
          onclick="expandImage(this.src)"
        />
      </div>
      <div class="scrollable-images">
        <% data.menu_photo.forEach((image, index) => { %>
        <% if (index > 0) { %>
        <img
          src="<%= image %>"
          alt="Scrollable Image <%= index %>"
          onclick="expandImage(this.src)"
        />
        <% } %>
        <% }); %>
      </div>
      <% } %>
      <p>Description: <%= data.description || 'No description available.' %></p>
      <% } else { %>
      <p>No data found.</p>
      <% } %>
    </div>
    <div class="overlay">
      <span class="close-btn">&times;</span>
      <img src="" alt="Expanded Image" />
    </div>

    <div style="height: 10px"></div>
    <script>
      function expandImage(src) {
        const overlay = document.querySelector('.overlay');
        const overlayImage = overlay.querySelector('img');
        overlayImage.src = src;
        overlay.style.display = 'flex';
      }

      document.querySelector('.overlay .close-btn').addEventListener('click', function() {
        document.querySelector('.overlay').style.display = 'none';
      });

      document.querySelector('.overlay').addEventListener('click', function(event) {
        if (event.target === this) {
          this.style.display = 'none';
        }
      });
    </script>
  </body>
</html>
