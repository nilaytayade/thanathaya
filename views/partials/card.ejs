<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dynamic Card</title>
    <!-- Link to Google Fonts for Roboto Condensed -->
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@300;400;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Roboto Condensed", sans-serif;
      }
      .card {
        border: 1px solid #000000;
        padding: 16px;
        border-radius: 8px;
        max-width: 400px;
        margin: auto;
        position: relative;
        padding-bottom: 10px;
        background-color: #ffffff;
        opacity: 1;
      }
      .card img {
        max-width: 100%;
        border-radius: 8px;
        margin-bottom: 8px;
        cursor: pointer;
      }
      .scrollable-images {
        display: flex;
        overflow-x: auto;
        gap: 8px;
        padding: 8px 0;
      }
      .scrollable-images img {
        max-width: 100px;
        border-radius: 8px;
      }
      .static-image {
        text-align: center;
        margin-bottom: 8px;
      }
      .top-right-image {
        position: absolute;
        top: 16px;
        right: 16px;
        max-width: 100px;
        border-radius: 8px;
        max-height: 100px;
      }
      .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.8);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000;
        display: none;
      }
      .overlay img {
        max-width: 90%;
        max-height: 90%;
      }
      .close-btn {
        position: absolute;
        top: 20px;
        right: 20px;
        font-size: 50px;
        color: white;
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <div class="card">
      <% if (data) { %>
      <h2><%= data.name %></h2>
      <p>Contact No: <%= data.contact %></p>
      <p>Location: <%= data.location %></p>
      <p>Price: <%= data.price %></p>
      <% if (data.mess_photo) { %>
      <img
        src="<%= data.mess_photo %>"
        alt="Top Right Image"
        class="top-right-image"
      />
      <% } %> <% if (data.menu_photo && data.menu_photo.length > 0) { %>
      <div class="static-image">
        <img
          src="<%= data.menu_photo[0] %>"
          alt="Static Image"
          class="expandable-image"
        />
      </div>
      <div class="scrollable-images">
        <% data.menu_photo.forEach((image, index) => { %> <% if (index > 0) { %>
        <img
          src="<%= image %>"
          alt="Scrollable Image <%= index %>"
          class="expandable-image"
        />
        <% } %> <% }); %>
      </div>
      <% } %>
      <p>Description: <%= data.description || 'No description available.' %></p>
      <% } else { %>
      <p>No data found.</p>
      <% } %>
    </div>
    <div class="overlay">
      <span class="close-btn">&times;</span>
      <img src="" alt="Expanded Image" />
    </div>
    <div style="height: 10px"></div>
    <script>
      document.querySelectorAll(".expandable-image").forEach((image) => {
        image.addEventListener("click", function () {
          document.querySelector(".overlay img").src = this.src;
          document.querySelector(".overlay").style.display = "flex";
        });
      });

      document
        .querySelector(".close-btn")
        .addEventListener("click", function () {
          document.querySelector(".overlay").style.display = "none";
        });

      document
        .querySelector(".overlay")
        .addEventListener("click", function (e) {
          if (e.target !== this.querySelector("img")) {
            this.style.display = "none";
          }
        });
    </script>
  </body>
</html>
