<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dynamic Card</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@300;400;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Roboto Condensed", sans-serif;
      }
      .card {
        border: 1px solid #000000;
        padding: 16px;
        border-radius: 8px;
        max-width: 400px;
        margin: 16px auto; /* Center the card horizontally */
        background-color: #ffffff;
        opacity: 1;
        position: relative;
      }
      .card img {
        max-width: 100%;
        border-radius: 8px;
        margin-bottom: 8px;
        cursor: pointer;
      }
      .scrollable-images {
        display: flex;
        overflow-x: auto;
        gap: 8px;
        padding: 8px 0;
      }
      .scrollable-images img {
        max-width: 100px;
        border-radius: 8px;
      }
      .static-image {
        text-align: center;
        margin-bottom: 8px;
      }
      .top-right-image {
        position: absolute;
        top: 16px;
        right: 16px;
        max-width: 100px;
        border-radius: 8px;
        max-height: 100px;
      }
      .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.8);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000;
        display: none;
      }

      .overlay img {
        max-width: 90%;
        max-height: 90%;
      }

      .close-btn {
        position: absolute;
        top: 20px;
        right: 20px;
        font-size: 50px;
        color: white;
        cursor: pointer;
      }
      .btn {
        display: inline-flex;
        align-items: center;
        padding: 8px 12px;
        margin: 16px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        color: white;
        font-size: 16px;
        text-decoration: none;
      }
      .btn-whatsapp {
        background-color: #25d366;
      }
      .btn-whatsapp img {
        margin-right: 8px;
      }
      .btn-maps {
        background-color: #4285f4;
      }
      .btn-maps img {
        margin-right: 8px;
      }
      .price {
        font-size: 18px;
        font-weight: bold;
        color: #333;
      }
      .button-container {
        display: flex;
        gap: 8px;
        margin: 16px 0;
      }
    </style>
  </head>
  <body>
    <div class="card">
      <% if (data) { %>
      <h2><%= data.name %></h2>
      <div class="button-container">
        <a
          href="https://wa.me/<%= data.contact %>"
          class="btn btn-whatsapp"
          target="_blank"
        >
          <img
            src="https://upload.wikimedia.org/wikipedia/commons/6/6b/WhatsApp.svg"
            alt="WhatsApp Logo"
            width="20"
            height="20"
          />
          WhatsApp
        </a>
        <a
          href="https://www.google.com/maps/search/?api=1&query=<%= encodeURIComponent(data.location) %>"
          class="btn btn-maps"
          target="_blank"
        >
          <img
            src="https://www.logo.wine/a/logo/Google_Maps/Google_Maps-Icon-Logo.wine.svg"
            alt="Google Maps Logo"
            width="20"
            height="20"
          />
          Location
        </a>
      </div>
      <p class="price">Price: <%= data.price %></p>
      <% if (data.mess_photo) { %>
      <img
        src="<%= data.mess_photo %>"
        alt="Top Right Image"
        class="top-right-image"
      />
      <% } %> <% if (data.menu_photo && data.menu_photo.length > 0) { %>
      <div class="static-image">
        <img
          src="<%= data.menu_photo[0] %>"
          alt="Static Image"
        />
      </div>
      <div class="scrollable-images">
        <% data.menu_photo.forEach((image, index) => { %> <% if (index > 0) { %>
        <img
          src="<%= image %>"
          alt="Scrollable Image <%= index %>"
        />
        <% } %> <% }); %>
      </div>
      <% } %>
      <p>Description: <%= data.description || 'No description available.' %></p>
      <% } else { %>
      <p>No data found.</p>
      <% } %>
    </div>
    <div class="overlay">
      <span class="close-btn">&times;</span>
      <img src="" alt="Expanded Image" />
    </div>    

    <div style="height: 10px"></div>
    <script>
      // Function to handle image click and show the overlay
      document.querySelectorAll('.scrollable-images img, .static-image img').forEach(img => {
        img.addEventListener('click', function() {
          const overlay = document.querySelector('.overlay');
          const overlayImage = overlay.querySelector('img');
          
          // Set the src of the overlay image to the clicked image src
          overlayImage.src = this.src;
          
          // Display the overlay
          overlay.style.display = 'flex';
        });
      });
    
      // Function to close the overlay
      document.querySelector('.overlay .close-btn').addEventListener('click', function() {
        document.querySelector('.overlay').style.display = 'none';
      });
    
      // Close overlay if user clicks outside the image
      document.querySelector('.overlay').addEventListener('click', function(event) {
        if (event.target === this) {
          this.style.display = 'none';
        }
      });
    </script>
    
  </body>
</html>
