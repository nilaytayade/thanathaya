<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dynamic Card</title>
    <!-- Link to Google Fonts for Roboto Condensed -->
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@300;400;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Roboto Condensed", sans-serif;
      }
      .card {
        border: 1px solid #000000;
        padding: 16px;
        border-radius: 8px;
        max-width: 400px;
        margin: auto;
        position: relative;
        padding-bottom: 10px;
        background-color: #ffffff;        
        background-image: url("https://t4.ftcdn.net/jpg/03/78/97/59/360_F_378975954_G39M4ptXAjxKy80gbBIEo0wqBkk89gBF.jpg");

      }
      .card img {
        max-width: 100%;
        border-radius: 8px;
        margin-bottom: 8px;
      }
      .scrollable-images {
        display: flex;
        overflow-x: auto;
        gap: 8px;
        padding: 8px 0;
      }
      .scrollable-images img {
        max-width: 100px;
        border-radius: 8px;
      }
      .static-image {
        text-align: center;
        margin-bottom: 8px;
      }
      .top-right-image {
        position: absolute;
        top: 16px;
        right: 16px;
        max-width: 100px;
        border-radius: 8px;
        max-height: 100px;
      }
    </style>
  </head>
  <body>
    <div class="card">
      <% if (data) { %>
      <h2><%= data.name %></h2>
      <p>Contact No: <%= data.contact %></p>
      <p>Location: <%= data.location %></p>
      <p>Price: <%= data.price %></p>
      <% if (data.mess_photo) { %>
      <img
        src="<%= data.mess_photo %>"
        alt="Top Right Image"
        class="top-right-image"
      />
      <% } %> <% if (data.menu_photo && data.menu_photo.length > 0) { %>
      <div class="static-image">
        <img src="<%= data.menu_photo[0] %>" alt="Static Image" />
      </div>
      <div class="scrollable-images">
        <% data.menu_photo.forEach((image, index) => { %> <% if (index > 0) { %>
        <img src="<%= image %>" alt="Scrollable Image <%= index %>" />
        <% } %> <% }); %>
      </div>
      <% } %>
      <p>Description: <%= data.description || 'No description available.' %></p>
      <% } else { %>
      <p>No data found.</p>
      <% } %>
    </div>
    <div style="height: 10px"></div>
  </body>
</html>
